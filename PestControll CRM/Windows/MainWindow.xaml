<Window x:Class="PestControll_CRM.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PestControll_CRM.Windows"
        mc:Ignorable="d"
        Title="PestControll CRM"
        Icon="/Images/CockroachIcon.ico"
        WindowState="Maximized"
        Height="500" Width="950">

    <Window.Resources>
        <ResourceDictionary Source="/Themes/WhiteRed.xaml"/>
    </Window.Resources>
    <Window.Style>
        <Binding Mode="OneWay" Source="{StaticResource Window}"/>
    </Window.Style>


    <TabControl Grid.Row="0" TabStripPlacement="Left">
        <!-- Лого -->
        <TabItem Width="125" Focusable="False" Padding="5">
            <TabItem.Header>
                <Grid>
                    <Image Source="/Images/TextLogo/Pest.png"/>
                    <Image Source="/Images/TextLogo/controll.png"/>
                    <Image Source="/Images/TextLogo/CRM.png"/>
                </Grid>
            </TabItem.Header>
        </TabItem>

        
        <!-- Статистика -->
        <TabItem>
            <TabItem.Header>
                <WrapPanel>
                    <TextBlock Text="&#xf201; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                    <TextBlock Text="Статистика"/>
                </WrapPanel>
            </TabItem.Header>
            <TabItem.Content>
                <!--
                    Статистика
                    
                -->
                123
            </TabItem.Content>
        </TabItem>

        
        <!-- Контакти -->
        <TabItem>
            <TabItem.Header>
                <WrapPanel>
                    <TextBlock Text="&#xf2b9; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                    <TextBlock Text="Контакти"/>
                </WrapPanel>
            </TabItem.Header>
            <TabItem.Content>
                <Grid>
                    <Grid.Resources>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Кнопки / Пошук / Сортування -->
                    <Border Grid.Row="0" Grid.RowSpan="2" Margin="2"
                            BorderThickness="2" BorderBrush="{StaticResource pc_red}" CornerRadius="5"/>
                    <!-- Кнопки управління -->
                    <Grid Grid.Row="0" Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Інфо, Додати, Видалити -->

                        <Button Grid.Column="0"
                                x:Name="ViewContactButton" Click="ContactsListBoxItem_MouseDoubleClick"
                                Background="{StaticResource pc_b_yellow}" 
                                Style="{StaticResource MenuButton}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xf06e; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                    <TextBlock>Огляд</TextBlock>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Grid.Column="1"
                                x:Name="CreateContactButton" Click="CreateContactButton_Click"
                                Background="{StaticResource pc_b_green}" 
                                Style="{StaticResource MenuButton}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xf0fe; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                    <TextBlock>Додати</TextBlock>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Grid.Column="2" 
                                x:Name="EditContactButton" Click="EditContactButton_Click"
                                Background="{StaticResource pc_b_blue}" 
                                Style="{StaticResource MenuButton}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xf044; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                    <TextBlock>Редагувати</TextBlock>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Grid.Column="3" 
                                x:Name="DeleteContactButton" Click="DeleteContactButton_Click"
                                Background="{StaticResource pc_b_red}" 
                                Style="{StaticResource MenuButton}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xf2ed; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                    <TextBlock>Видалити</TextBlock>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <!-- Пошук/Сортування -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Grid.ColumnSpan="3" Margin="10 5 5 10"
                                BorderThickness="3" BorderBrush="{StaticResource pc_black}"
                                CornerRadius="10" ClipToBounds="True">
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="1" Margin="0"
                                         x:Name="ContactSearchTextBox" 
                                         TextChanged="ContactSearchTextBox_TextChanged"
                                         KeyDown="ContactSearchTextBox_KeyDown"
                                         Foreground="{StaticResource pc_black}"
                                         BorderBrush="Transparent" BorderThickness="0"
                                         VerticalAlignment="Center"/>
                                <Button  Grid.Column="2"
                                         Visibility="Hidden"
                                         x:Name="ClearSearch" Click="ClearSearch_Click"
                                         Padding="0" Margin="10 0" Style="{StaticResource MenuButton}"
                                         Background="Transparent" BorderThickness="0">
                                    <TextBlock Margin="0" Foreground="{StaticResource pc_red}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Text="&#xf00d; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                </Button>
                            </Grid>
                        </Border>

                        <Border Grid.Column="3"
                                BorderBrush="{StaticResource pc_black}"
                                BorderThickness="3"
                                CornerRadius="10"
                                Margin="5 5 10 10">
                            <ComboBox x:Name="ContactStatusComboBox"
                                      SelectionChanged="ContactStatusComboBox_SelectionChanged"
                                      Style="{DynamicResource ComboBoxTransparentStyle}"
                                      Background="Transparent"
                                      ItemsSource="{Binding contactStatuses}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=StatusName}"
                                                   Foreground="{StaticResource pc_black}"
                                                   Background="Transparent"
                                                   Padding="5 0 0 0"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Border>

                        <Button Grid.Column="4" Margin="0 10 15 15" Visibility="Hidden"
                                x:Name="ClearSelectedStatusButton" Click="ClearSelectedStatusButton_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="&#xf00d;" Margin="0" Padding="0"
                                       Foreground="{StaticResource pc_red}"
                                       FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                        </Button>
                    </Grid>


                    <!-- Контакти -->
                    <Border Grid.Row="2" Margin="2 5 2 2"
                            BorderThickness="2" BorderBrush="{StaticResource pc_red}" CornerRadius="5">
                        <ListBox x:Name="ContactsListBox" ItemsSource="{Binding contacts}"
                                 MouseDoubleClick="ContactsListBoxItem_MouseDoubleClick"
                                 ItemContainerStyle="{DynamicResource _ListBoxItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" >

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>


                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{Binding Path=Status.StatusColor}" 
                                            BorderThickness="4" CornerRadius="5">
                                        <Border.OpacityMask>
                                            <VisualBrush>
                                                <VisualBrush.Visual>
                                                    <Border 
                                                    Background="Black"
                                                    SnapsToDevicePixels="True"
                                                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=Border}}"
                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"
                                                    />
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Border.OpacityMask>
                                        <Grid Width="240" MinHeight="150" Background="White">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition MinHeight="30"/>
                                                <RowDefinition />
                                                <RowDefinition Height="20"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding Path=Status.StatusName}"  VerticalAlignment="Center" Padding="10 0 0 0"
                                                   Background="{Binding Path=Status.StatusColor}" Foreground="White" FontWeight="Black"/>
                                            <TextBlock Grid.Row="1" Text="{Binding Path=PIB}" VerticalAlignment="Top" Padding="10 0 0 0"
                                                   FontWeight="Bold" FontSize="18" TextWrapping="Wrap"/>
                                            <TextBlock Grid.Row="2" Text="{Binding Path=PhoneNumbersStr}" VerticalAlignment="Top" Padding="10 0 0 0"
                                                   FontWeight="Medium" FontSize="18" TextWrapping="Wrap" Focusable="False"/>
                                            <TextBlock Grid.Row="3" Text="{Binding Path=Email}"  VerticalAlignment="Center" Padding="10 0 0 2"
                                                   FontWeight="Bold" FontSize="10" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </TabItem.Content>
        </TabItem>

        
        <!-- Дзвінки -->
        <TabItem IsSelected="True">
            <TabItem.Header>
                <WrapPanel>
                    <TextBlock Text="&#xf095; " FontFamily="/Fonts/#Font Awesome 6 Free Solid" 
                               x:Name="CallIcon" Visibility="Visible"/>
                    <TextBlock Text="&#xf06a; " FontFamily="/Fonts/#Font Awesome 6 Free Solid" 
                               Visibility="Collapsed"
                               x:Name="CallWarningIcon"  Foreground="Orange"/>
                    <TextBlock Text="Дзвінки"/>
                </WrapPanel>
            </TabItem.Header>
            <TabItem.Content>

                <TabControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" TabStripPlacement="Top">
                    <!--#region PlannedCalls -->
                    <TabItem Style="{StaticResource SubTabItem}">
                        <TabItem.Header>
                            <WrapPanel>
                                <TextBlock Text="&#xf017; " FontFamily="/Fonts/#Font Awesome 6 Free Regular"/>
                                <TextBlock Text="Заплановані"/>
                            </WrapPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4"
                                        BorderBrush="{StaticResource pc_red}" BorderThickness="2"/>

                                <Button Grid.Row="0" Grid.Column="0"
                                    x:Name="CreatePlannedCallButton" Click="CreatePlannedCallButton_Click"
                                    Margin="7.5"
                                    Background="{StaticResource pc_b_green}" 
                                    Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf271; " FontFamily="/Fonts/#Font Awesome 6 Free Regular"/>
                                            <TextBlock>Запланувати</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" IsEnabled="False"
                                        x:Name="StartPlannedCallButton" Click="StartPlannedCallButton_Click"
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_yellow}"
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf0fe; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                            <TextBlock>Створити</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="2" IsEnabled="False"
                                        x:Name="EditPlannedCallButton" Click="EditPlannedCallButton_Click"
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_blue}" 
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf044; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                            <TextBlock>Редагувати</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="3" IsEnabled="False"
                                        x:Name="DeletePlannedCallButton" Click="DeletePlannedCallButton_Click"
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_red}" 
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf3dd; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                            <TextBlock>Відмінити</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>



                                <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="10 0"
                                         x:Name="PlannedCallsListBox" ItemsSource="{Binding plannedCalls}"
                                         ItemContainerStyle="{DynamicResource _ListBoxItemStyle}"
                                         SelectionChanged="PlannedCallsListBox_SelectionChanged"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" >

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="0" Background="{StaticResource pc_white}"
                                                    Margin="0" Padding="5">
                                                <Border BorderBrush="{StaticResource pc_black}" 
                                                        BorderThickness="1" CornerRadius="5">
                                                    <Border.OpacityMask>
                                                        <VisualBrush>
                                                            <VisualBrush.Visual>
                                                                <Border Background="Black"
                                                                    SnapsToDevicePixels="True"
                                                                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Border.OpacityMask>
                                                    <Grid Background="{StaticResource pc_white}" Margin="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="6*"/>
                                                            <ColumnDefinition Width="5*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>


                                                        <TextBlock Grid.Column="0"
                                                               TextAlignment="Center" VerticalAlignment="Center"
                                                               Margin="0" TextWrapping="Wrap"
                                                               Tag="{Binding Path=color_binding_name}" Initialized="TextBlock_Initialized"
                                                               Text="{Binding Path=date_str}"/>

                                                        <TextBlock Grid.Column="1" 
                                                               TextAlignment="Center" VerticalAlignment="Center"
                                                               Margin="0" TextWrapping="Wrap"
                                                               Tag="{Binding Path=color_binding_name}" Initialized="TextBlock_Initialized"
                                                               Text="{Binding Path=time_str}"/>

                                                        <TextBlock Grid.Column="2"
                                                               TextAlignment="Left" VerticalAlignment="Center"
                                                               Margin="5 0 0 0" TextWrapping="Wrap"
                                                               Foreground="{Binding Path=contact.Status.StatusColor}"
                                                               Text="{Binding Path=contact.PIB}"/>

                                                        <Button Grid.Row="0" Grid.Column="3" Tag="{Binding Path=Id}"
                                                            x:Name="ShowGoalPlannedCallButton" Click="ShowGoalPlannedCallButton_Click"
                                                            Margin="0"
                                                            Background="{StaticResource pc_white}" 
                                                            Foreground="{StaticResource pc_black}"
                                                            FontWeight="Medium"
                                                            Style="{StaticResource MenuButton}">
                                                            <Button.Resources>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="CornerRadius" Value="5"/>
                                                                </Style>
                                                            </Button.Resources>
                                                            <Button.Content>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock>Детальніше</TextBlock>
                                                                    <TextBlock Text="&#xf107; " x:Name="ShowGoalPlannedCallDown"
                                                                           FontFamily="/Fonts/#Font Awesome 6 Free Solid" Visibility="Visible"/>
                                                                    <TextBlock Text="&#xf106; " x:Name="ShowGoalPlannedCallUp"
                                                                           FontFamily="/Fonts/#Font Awesome 6 Free Solid" Visibility="Collapsed"/>
                                                                </StackPanel>
                                                            </Button.Content>
                                                        </Button>
                                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                                               x:Name="GoalPlannedCallTextBlock"
                                                               Visibility="Collapsed"
                                                               FontSize="16" FontWeight="Light"
                                                               Margin="0" TextWrapping="Wrap" TextAlignment="Left"
                                                               Text="{Binding Path=goal}"/>

                                                    </Grid>
                                                </Border>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </TabItem.Content>
                    </TabItem>
                    <!--#endregion-->


                    <!--#region Calls -->
                    <TabItem Style="{StaticResource SubTabItem}">
                        <TabItem.Header>
                            <WrapPanel>
                                <TextBlock Text="&#xf1da; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                <TextBlock Text="Історія"/>
                            </WrapPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4"
                                        BorderBrush="{StaticResource pc_red}" BorderThickness="2"/>

                                <Button Grid.Row="0" Grid.Column="0" IsEnabled="True"
                                        x:Name="StartInnerCallButton" Click="StartInnerCallButton_Click"
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_green}" 
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf2a0; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                            <TextBlock FontSize="14">Вхідний<LineBreak/>дзвінок</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="1" IsEnabled="False"
                                        x:Name="EditCallButton" Click="EditCallButton_Click"
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_blue}" 
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf044; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                            <TextBlock>Редагувати</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <Button Grid.Row="0" Grid.Column="2" IsEnabled="False"
                                        x:Name="DeleteCallButton" Click="DeleteCallButton_Click"
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_red}" 
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf2ed; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                            <TextBlock>Видалити</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>


                                <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="10 0"
                                         x:Name="CallsListBox" ItemsSource="{Binding calls}"
                                         ItemContainerStyle="{DynamicResource _ListBoxItemStyle}"
                                         SelectionChanged="CallsListBox_SelectionChanged"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" >

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="0" Background="{StaticResource pc_white}"
                                                Margin="0" Padding="5">
                                                <Border BorderBrush="{StaticResource pc_black}" 
                                                    BorderThickness="1" CornerRadius="5" Padding="5">
                                                    <Border.OpacityMask>
                                                        <VisualBrush>
                                                            <VisualBrush.Visual>
                                                                <Border Background="Black"
                                                                    SnapsToDevicePixels="True"
                                                                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Border.OpacityMask>
                                                    <Grid Background="{StaticResource pc_white}" Margin="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                                                   Foreground="{Binding Path=contact.Status.StatusColor}"
                                                                   Text="{Binding Path=contact.PIB}"
                                                                   TextWrapping="Wrap"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding Path=date_time, StringFormat='{}{0: dd.MM.yyyy HH:mm}'}"/>
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding Path=callResultType.Name}"
                                                                   TextWrapping="Wrap"/>
                                                    </Grid>
                                                </Border>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </TabItem.Content>
                    </TabItem>
                    <!--#endregion-->

                </TabControl>
            </TabItem.Content>
        </TabItem>
        
        
        <!-- Роботи -->
        <TabItem>
            <TabItem.Header>
                <WrapPanel>
                    <TextBlock Text="&#xf2bb; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                    <TextBlock Text="Клієнти"/>
                </WrapPanel>
            </TabItem.Header>
            <TabItem.Content>
                <TabControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" TabStripPlacement="Top">
                    <!--#region LegalPerson -->
                    <TabItem Style="{StaticResource SubTabItem}">
                        <TabItem.Header>
                            <WrapPanel>
                                <TextBlock Text="&#xf275; " FontFamily="/Fonts/#Font Awesome 6 Free Solid"/>
                                <TextBlock Text="Юридичні"/>
                            </WrapPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4"
                                        BorderBrush="{StaticResource pc_red}" BorderThickness="2"/>

                                <Button Grid.Row="0" Grid.Column="0"
                                        x:Name="ViewLegalPersonButton" Click="ViewLegalPersonButton_Click"  
                                        Margin="7.5"
                                        Background="{StaticResource pc_b_yellow}" 
                                        Style="{StaticResource MenuButton}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xf06e; " FontFamily="/Fonts/#Font Awesome 6 Free Regular"/>
                                            <TextBlock>Огляд</TextBlock>
                                        </StackPanel>
                                    </Button.Content>
